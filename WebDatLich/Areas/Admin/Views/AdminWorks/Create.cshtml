@model WebDatLich.Models.Work

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>




    <div class="container col-md-8">
    <div class="card">
        <div class="container col-md-10">
            <br />
            <h4>Work</h4>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Duration" class="control-label"></label>
                            <input asp-for="Duration" class="form-control" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Editable" class="control-label"></label>

                        </div>
                        <div class="form-group row">
                          
                            <div class="radio col-6">
                                <input asp-for="Editable" type="radio" name="editableRadios" value="True" id="editableYes">
                                <label for="editableYes">
                                    Yes
                                </label>
                            </div>
                            <div class="radio col-6">
                                <input asp-for="Editable" type="radio" name="editableRadios" value="False" id="editableNo">
                                <label for="editableNo">
                                    No
                                </label>
                            </div>
                            <span asp-validation-for="Editable" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            
                            <label asp-for="Target" class="control-label"></label>
                     
                        </div>
                        <div class="form-group row">
                     
                            <div class="radio col-6">

                                <input asp-for="Target" type="radio" name="targetRadios" value="Retail" id="retail">
                                <label for="retail">
                                    Retail
                                </label>
                            </div>
                            <div class="radio col-6">
                                <input asp-for="Target" type="radio" name="targetRadios" value="Corporate"   id="corporate">
                                <label for="corporate">
                                    Corporate
                                </label>
                            </div>
                            <span asp-validation-for="Target" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                      
                                <a asp-action="Index">Back to List</a>
                            
                        
                        </div>
                
                    </form>
                </div>
            </div>
        </div>

    </div>
    </div>






