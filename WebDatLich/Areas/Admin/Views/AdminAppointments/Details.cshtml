@model WebDatLich.Models.Appointment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>
<div class="container col-md-8">
    <div class="card">
        <div class="container col-md-10">
            <br />
            <div>
                <h4>Appointment</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Start)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Start)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.End)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.End)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdCustomerNavigation)
                        @* Người đặt lịch *@
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdCustomerNavigation.Username)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdProviderNavigation)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdProviderNavigation.Username)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdWorkNavigation.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdWorkNavigation.Name)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdWorkNavigation.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdWorkNavigation.Description)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdWorkNavigation.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdWorkNavigation.Price) @(" VNĐ")
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ExchangeIdAppointmentRequestedNavigations)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ExchangeIdAppointmentRequestedNavigations)
                    </dd>


                    <dt class="col-sm-2">
                        Hủy lịch
                    </dt>
                    <dd class="col-sm-10">
                        <a asp-action="Cancel" asp-route-id="@Model.Id">
                            <button class="btn btn-danger btn-tone m-r-2">Hủy</button>
                        </a>
                    </dd>

                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">
                    <button class="btn btn-primary btn-tone m-r-1">Sửa</button>
                </a>
                <a asp-action="Index">Back to List</a>
            </div>
            <br/>

        </div>
    </div>
</div>

